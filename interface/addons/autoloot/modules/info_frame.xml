<Ui xmlns="http://www.blizzard.com/wow/ui/"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	   
<Script file="autoloot-lib.lua" />

	<Frame name="info_frame_main" parent="UIParent" toplevel="true" enableMouse="true" movable="true" clampedToScreen = "true" hidden = "true">
    <Size x="400" y="200"/>
    <Anchors>
        <Anchor point="CENTER"/>
    </Anchors>
	
	<Scripts>
	 <OnMouseDown>
	  if button == "LeftButton" and not self.isMoving then
	   self:StartMoving();
	   self.isMoving = true;
	  end
	 </OnMouseDown>
	 <OnMouseUp>
	  if button == "LeftButton" and self.isMoving then
	   self:StopMovingOrSizing();
	   self.isMoving = false;
	  end
	 </OnMouseUp>
	 <OnHide>
	  if ( self.isMoving ) then
	   self:StopMovingOrSizing();
	   self.isMoving = false;
	  end
	 </OnHide>
	</Scripts>
	
    <Backdrop bgFile="Interface\TutorialFrame\TutorialFrameBackground"
       edgeFile="Interface\DialogFrame\UI-DialogBox-Border" tile="true">
	<EdgeSize val="16"/>
	<TileSize val="32"/>
 	<BackgroundInsets left="5" right="5" top="5" bottom="5"/>
    </Backdrop>
	
	<Layers>
	 <Layer level = "ARTWORK">
	 
	 <FontString name="info_text" font="fonts\ARIALN.ttf" text="Autoloot" justifyH="LEFT" justifyV="TOP" parent = "info_frame_main">
		<Color r="1" g="1" b="1" a="1"/>
		<FontHeight val="28"/>
		<Anchors>
			<Anchor point="CENTER" relativeTo="info_frame_main" x="0" y="110" />
		</Anchors>
		<Shadow>
			<Offset x="1" y="1" />
			<Color r="0" g="0" b="0"/>
		</Shadow>
	  </FontString>
	  
	  <FontString name="curse_title" font="fonts\ARIALN.ttf" text="Curse Link" justifyH="LEFT" justifyV="TOP" parent = "info_frame_main">
		<Color r="0" g="1" b="0" a="1"/>
		<FontHeight val="16"/>
		<Anchors>
			<Anchor point="CENTER" relativeTo="info_frame_main" x="0" y="30" />
		</Anchors>
		<Shadow>
			<Offset x="1" y="1" />
			<Color r="0" g="0" b="0"/>
		</Shadow>
	  </FontString>
	  
	  <FontString name="author" font="fonts\ARIALN.ttf" text="Sephíra (Mal'Ganis - EU)" justifyH="LEFT" justifyV="TOP" parent = "info_frame_main">
		<Color r="1" g="1" b="1" a="1"/>
		<FontHeight val="8"/>
		<Anchors>
			<Anchor point="CENTER" relativeTo="info_frame_main" x="-150" y="-106" />
		</Anchors>
		<Shadow>
			<Offset x="1" y="1" />
			<Color r="0" g="0" b="0"/>
		</Shadow>
	  </FontString>
	  
	   <FontString name="how_to_copy" font="fonts\ARIALN.ttf" text="BROKEN TEXT" justifyH="LEFT" justifyV="TOP" parent = "info_frame_main">
		<Color r="0" g="1" b="0" a="1"/>
		<FontHeight val="14"/>
		<Anchors>
			<Anchor point="CENTER" relativeTo="info_frame_main" x="0" y="-40" />
		</Anchors>
		<Shadow>
			<Offset x="1" y="1" />
			<Color r="0" g="0" b="0"/>
		</Shadow>
	  </FontString>
	  
	  <FontString name="infoframe_version" font="fonts\ARIALN.ttf" text="BROKEN TEXT" justifyH="LEFT" justifyV="TOP" parent = "info_frame_main">
		<Color r="1" g="1" b="1" a="1"/>
		<FontHeight val="12"/>
		<Anchors>
			<Anchor point="CENTER" relativeTo="info_frame_main" x="0" y="60" />
		</Anchors>
		<Shadow>
			<Offset x="1" y="1" />
			<Color r="0" g="0" b="0"/>
		</Shadow>
	  </FontString>

	  </Layer>
	 </Layers>
	 
	 <frames>
	 
	 <EditBox name="curse_link_editbox" inherits="InputBoxTemplate" autoFocus="false" numeric="false" parent = "info_frame_main" multiline = "true" visible = "true">
			<Size x="320" y="36"/>
				<Anchors>
					<Anchor point="CENTER" relativePoint="CENTER">
						<Offset x="0" y="0"/>
					</Anchor>
				</Anchors>
					<Scripts>
						<OnEnterPressed>
						</OnEnterPressed>
					</Scripts>
					
	 </EditBox>
	 
	 </frames>
	 
</Frame>


	  
<Button name="close_icon_help_frame" frameStrata="HIGH" hidden="true" inherits = "ActionButtonTemplate" enableMouse="true">
                     <Size x="16" y="16"/>
                           <Anchors>
                              <Anchor point="CENTER" relativeTo="info_frame_main" relativePoint="CENTER">
							<Offset x="137" y="66"/>
                             </Anchor>
                       </Anchors>

