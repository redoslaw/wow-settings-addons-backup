<Frame name="autoroll_frame" parent="UIParent" toplevel="true" enableMouse="true" movable="true" clampedToScreen = "true" hidden = "true">
    <Size x="350" y="350"/>
    <Anchors>
        <Anchor point="CENTER"/>
    </Anchors>
	
	<Scripts>
	 <OnMouseDown>
	  if button == "LeftButton" and not self.isMoving then
	   self:StartMoving();
	   self.isMoving = true;
	  end
	 </OnMouseDown>
	 <OnMouseUp>
	  if button == "LeftButton" and self.isMoving then
	   self:StopMovingOrSizing();
	   self.isMoving = false;
	  end
	 </OnMouseUp>
	 <OnHide>
	  if ( self.isMoving ) then
	   self:StopMovingOrSizing();
	   self.isMoving = false;
	  end
	 </OnHide>
	</Scripts>
	
    <Backdrop bgFile="Interface\TutorialFrame\TutorialFrameBackground"
       edgeFile="Interface\DialogFrame\UI-DialogBox-Border" tile="true">
	<EdgeSize val="16"/>
	<TileSize val="32"/>
 	<BackgroundInsets left="5" right="5" top="5" bottom="5"/>
    </Backdrop>
	
	<Layers>
	 <Layer level = "ARTWORK">
	 
